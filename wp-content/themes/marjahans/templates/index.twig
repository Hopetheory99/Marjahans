{% extends 'base.twig' %}

{% block content %}
<main class="container mx-auto p-4">
  {% include 'components/product-filter.twig' %}
  {% include 'components/viewer.twig' %}
  {% for post in posts %}
    <article class="mb-6">
      <h2 class="text-xl font-semibold">{{ post.title }}</h2>
      <div class="prose">{{ post.content }}</div>
    </article>
  {% else %}
    <p>No posts found.</p>
  {% endfor %}
</main>
{% endblock %}
